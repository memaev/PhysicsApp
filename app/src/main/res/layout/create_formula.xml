<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new formula"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="19sp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_24"
        android:background="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/create_formula_dialog_close_btn"/>

    <EditText
        android:id="@+id/name_formula_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edit_txt_shape"
        app:layout_constraintTop_toBottomOf="@id/create_formula_dialog_close_btn"
        android:layout_marginTop="20dp"
        android:hint="Name of formula"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"/>


    <EditText
        android:id="@+id/formula_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edit_txt_shape"
        app:layout_constraintTop_toBottomOf="@id/name_formula_txt"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:hint="Formula"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/create_formula_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formula_txt"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>